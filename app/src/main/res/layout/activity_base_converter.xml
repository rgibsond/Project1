<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rgdrys13.project1.BaseConverter">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_text"
            android:textSize="@dimen/default_header_text_size"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/enter_an_integer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:text="@string/enter_an_integer"
            android:textSize="@dimen/medium_text_size"
            />

        <EditText
            android:id="@+id/integer_input_edittext_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_an_integer_id"
            android:textSize="@dimen/medium_text_size"
            />

        <TextView
            android:id="@+id/enter_a_base_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_a_base"
            android:textSize="@dimen/medium_text_size"
            android:layout_below="@id/integer_input_edittext_id"
            />

        <EditText
            android:id="@+id/base_input_edittext_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_a_base_id"
            android:textSize="@dimen/medium_text_size"
            />

        <TextView
            android:id="@+id/enter_a_base_out_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter an output base:"
            android:textSize="@dimen/medium_text_size"
            android:layout_below="@id/base_input_edittext_id"
            />

        <EditText
            android:id="@+id/base_out_input_edittext_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_a_base_out_id"
            android:textSize="@dimen/medium_text_size"
            />

        <Space
            android:id="@+id/space_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/medium_text_size"
            android:layout_below="@id/base_out_input_edittext_id"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/compute_answer"
            android:id="@+id/button"
            android:layout_below="@id/space_id"
            android:textSize="@dimen/medium_text_size"
            android:onClick="buttonOnClick"
            />

        <TextView
            android:id="@+id/answer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:text="THE ANSWER WILL GO HERE"
            android:textSize="@dimen/medium_text_size"
            />

    </RelativeLayout>
</ScrollView>